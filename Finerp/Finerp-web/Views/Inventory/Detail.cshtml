@model Finerp_web.Data.Inventories.Inventory

<div asp-validation-summary="ModelOnly"></div>

<form method="post" name="inventoryForm" action="@Url.Action("Detail", "Inventory")" enctype="multipart/form-data">

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
            <input type="hidden" class="form-control" value="@Model.InventoryId" name="InventoryId">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">İsim</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.name" name="name">
            <span asp-validation-for="name"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Açıklama</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.description" name="description">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Resim</label>
        <div class="col-sm-5">
            <input class="form-control" type="file" value="@Model.photo" id="formFile" name="photo">
        </div>
        <div class="col-sm-5">
            <img src="@Model.GetBase64Image()" alt="Inventory Photo" width="64" height="64">
        </div>
    </div>

    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Stok</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" value="@Model.stock" name="stock">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <button type="button" class="btn btn-danger" onclick="confirmDelete()">Sil</button>
        </div>

    </div>

</form><!-- End General Form Elements -->
<script>
        function confirmDelete() {
            if (confirm('Bu kaydı silmek istediğinize emin misiniz?')) {
               var customerForm = document.getElementsByName('inventoryForm')[0];
                   customerForm.action = '@Url.Action("Delete", "Inventory")';
                   customerForm.submit();
            }
        }
    </script>